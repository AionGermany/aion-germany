        </xs:sequence>
        <xs:attribute name="item_id" type="itemId" use="required"/>
        <xs:attribute name="decomposable_name" type="xs:string" use="optional"/>
    </xs:complexType>
    <xs:complexType name="ExtractedItemsCollection">
